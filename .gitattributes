# Set default behavior for all files
* text=auto

# Explicitly declare text files you want to always be normalized
*.py text
*.js text
*.tsx text
*.ts text
*.json text
*.md text
*.yml text
*.yaml text
*.sql text
*.txt text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
Dockerfile text eol=lf

# Binary files that should not be touched
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.exe binary
