# Production Environment Configuration for SAT Fergana LMS
# Copy this file to .env and update with your production values

# Django Settings
SECRET_KEY=your-super-secret-production-key-change-this-immediately
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration
USE_POSTGRES=True
DB_NAME=sat_fergana_prod
DB_USER=sat_fergana_user
DB_PASSWORD=your-secure-production-password
DB_HOST=your-postgres-host-or-ip
DB_PORT=5432

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=False

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Logging Configuration
LOG_FILE=/var/log/sat-fergana/app.log

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Celery Configuration (Redis)
CELERY_BROKER_URL=redis://your-redis-host:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/0

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Email Configuration (for invitations, notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-noreply-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 for media files (production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_DEFAULT_ACL=public-read
AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com

# Logging Configuration
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Cache Configuration (Redis)
CACHE_URL=redis://your-redis-host:6379/1

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE='redis'

# Database Connection Pooling
DB_CONN_MAX_AGE=60
DB_OPTIONS='{"MAX_CONNS": 20, "MIN_CONNS": 5}'

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
